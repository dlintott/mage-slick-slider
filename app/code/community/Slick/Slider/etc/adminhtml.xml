                                <sort_order>10</sort_order>
                            </slide>
                        </children>
                    </slick_slider>
                </children>
            </admin>
        </resources>
    </acl>
    <menu>
        <slick_slider translate="title" module="slick_slider">
            <title>Slick Slider</title>
            <sort_order>77</sort_order>
            <children>
                <slider translate="title" module="slick_slider">
                    <title>Slider</title>
                    <action>adminhtml/slider_slider</action>
                    <sort_order>0</sort_order>
                </slider>
                <slide translate="title" module="slick_slider">
                    <title>Slide</title>
                    <action>adminhtml/slider_slide</action>
                    <sort_order>10</sort_order>
                </slide>
            </children>
